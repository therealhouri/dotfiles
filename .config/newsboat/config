# Bind keys
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
bind-key d pagedown
bind-key u pageup
bind-key g home
bind-key G end
bind-key K next-feed
bind-key J prev-feed
bind-key m toggle-article-read
bind-key n next
bind-key N prev
bind-key ^R redraw
bind-key s sort
bind-key S rev-sort
bind-key BACKSPACE quit
bind-key ESC quit
bind-key o open-in-browser-and-mark-read
bind-key O open-all-unread-in-browser
bind-key SPACE macro-prefix

auto-reload yes
# download-full-page yes
prepopulate-query-feeds yes
browser "open-rss-link %u"
macro y set browser "printf %u | xclip -selection clipboard"; open-in-browser-and-mark-read; set browser "open-rss-link %u"
datetime-format "%D, %R"

color listnormal cyan default
color listfocus black yellow standout bold
color listnormal_unread blue default
color listfocus_unread yellow default bold
color info blue black bold
color article white default bold

highlight feedlist "---.*---" yellow default bold
highlight feedlist ".*0/0.." default default invis

highlight article "^(Feed|Title|Author):.*$" cyan default bold
highlight article "^(Link|Date):.*$" default default
highlight article "https?://[^ ]+" green default
highlight article "\[[0-9][0-9]*\]" magenta default bold
